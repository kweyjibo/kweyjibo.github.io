---
title: Articles
pagination:
  data: collections.posts
  size: 5
  reverse: true
permalink: "{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
eleventyNavigation:
  key: Home
  order: 1
layout: page.njk
---

{% for post in pagination.items %}

<article class="article-item">
  {% if post.data.image %}
  <div class="article-item_cover">
    <figure class="article-item_img">
      <a href="{{ post.url }}"><img
        src="{{ post.data.image }}"
        alt="{{ post.data.title }}"
        width="{{ post.data.imageProp }}"
      /></a>
    </figure>
  </div>
  {% endif %}
  <section
    class="article-item_content {% if not(post.data.image) %}__shift{% endif %}"
  >
  
    <h1 class="article-item_title">
      <a class="article-item_lk" href="{{ post.url }}">{{ post.data.title }}</a>
    </h1>
    <div class="tags __top">
      {% for tag in post.data.tags %} {% if tag != "posts" %}
      <span class="tag_i">
        <a href="/tags/{{ tag | slugify }}" class="tag_lk">
          {{ tag }}
        </a>
      </span>
      {% endif %} {% endfor %}
    </div>
    
    <div class="article-item__desc">{{ post.data.dsc }}</div>


    <footer class="article-item__footer">
      <time class="article-item_date" datetime="{{ post.date }}">{{ post.date | dateShort }}</time>
      <span class="article-item_read">{{ post.content | readTime }} min read</span>
    </footer>
  </section>
</article>

{% endfor %} {% include "paginator.njk" %}
