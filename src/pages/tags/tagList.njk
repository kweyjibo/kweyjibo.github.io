---
layout: page.njk
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
eleventyComputed:
  title: "{{ tag }}"
---  

{% for post in collections[tag] %}
  <article class="article-card">
    <h2 class="article-card_title">
      <a href="{{ post.url }}" class="article-card_link">
        {{ post.data.title }}
      </a>
    </h2>

    <div class="article-card_desc">{{ post.data.dsc }}</div>
  </article>
{% endfor %}
